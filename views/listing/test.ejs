<% layout("/layouts/boilerplate") %>
<body>
    <div class="card-container">
        <% for (let listing of alllisting) { %>
            <div class="card">
                <!-- Image Section -->
               <img 
  src="<%= listing.image && listing.image.url ? listing.image.url : listing.image ? listing.image : '/default.jpg' %>" 
  alt="<%= listing.title %>" 
  class="card-image">
                
                <!-- Details Section -->
                <div class="card-details">
                    <h2><a href="/listings/<%= listing._id %>"><%= listing.title %></a></h2>
                    <p><%= listing.description %></p>
                    <p><strong>Price:</strong><%= listing.price %>/night</p>
                  
                    <a href="/listings/<%= listing._id %>" class="btn">View Details</a>
                </div>
            </div>
        <% } %>
    </div>
</body>